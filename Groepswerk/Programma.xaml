<Window x:Class="Groepswerk.Programma"
        Name="windowProgramma"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programma" Height="300" Width="300">
    <DockPanel>
        <Menu Name="menuDefault" DockPanel.Dock="Top">
            <MenuItem Header="Menu">
                <MenuItem Header="Loginscherm" Click="btnHome_Click"/>
                <MenuItem Header="Stop" Click="btnStop_Click"/>
            </MenuItem>
        </Menu>
        <Grid Background="LemonChiffon" DockPanel.Dock="Top" MinHeight="50"/>
        <Grid Background="LemonChiffon" DockPanel.Dock="Bottom" MinHeight="50"/>
        <Grid Background="LemonChiffon" DockPanel.Dock="Left" MinWidth="50"/>
        <Grid Background="LemonChiffon" DockPanel.Dock="Right" MinWidth="50"/>
        <Frame Name="framePages" Background="Azure" NavigationUIVisibility="Hidden"/>       
    </DockPanel>
</Window>
