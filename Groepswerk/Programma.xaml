<Window x:Class="Groepswerk.Programma"
        Name="programma"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programma" Height="600" Width="600">
    <DockPanel Name="dock">
        <Menu Name="mainMenu" DockPanel.Dock="Top" />
        <Grid Background="LemonChiffon" DockPanel.Dock="Top" MinHeight="100">
            <Button Name="btnLogUit" Click="btnHome_Click" Content="Uitloggen" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" Width="56"/>
            <Button Name="btnExit" Click="btnStop_Click" Content="Stop" HorizontalAlignment="Right" Height="29" Margin="504,10,0,0" VerticalAlignment="Top" Width="63"/>
            <Label Name="lblGebruiker" Content="{Binding Path=ActieveGebruiker}" HorizontalAlignment="Left" Height="45" Margin="162,25,0,0" VerticalAlignment="Top" Width="205"/>
        </Grid>
        <Grid Background="LemonChiffon" DockPanel.Dock="Bottom" MinHeight="100"/>
        <Grid Background="LemonChiffon" DockPanel.Dock="Left" MinWidth="100"/>
        <Grid Background="LemonChiffon" DockPanel.Dock="Right" MinWidth="100"/>
        <Frame Name="framePages" Background="Azure" NavigationUIVisibility="Hidden"/>       
    </DockPanel>
</Window>
