<Page x:Class="Groepswerk.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="292" d:DesignWidth="551.2"
	Title="Login">

    <Grid>
        <ListBox x:Name="listbLogin" HorizontalAlignment="Left" Height="30" Margin="161,131,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="0.5,0.5"/>
        <PasswordBox HorizontalAlignment="Left" Height="24" Margin="161,173,0,0" VerticalAlignment="Top" Width="122"/>
        <Label Content="Paswoord" HorizontalAlignment="Left" Height="24" Margin="40,173,0,0" VerticalAlignment="Top" Width="92"/>
        <Label Content="Gebuikersnaam" HorizontalAlignment="Left" Height="25" Margin="40,131,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Login" HorizontalAlignment="Left" Height="35" Margin="161,226,0,0" VerticalAlignment="Top" Width="122"/>
        <CheckBox Name="chkLk" Content="Login als leerkracht" HorizontalAlignment="Left" Height="21" Margin="379,10,0,0" VerticalAlignment="Top" Width="149" Checked="chkLk_Checked"/>

    </Grid>
</Page>
